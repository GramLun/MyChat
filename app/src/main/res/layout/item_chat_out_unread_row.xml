<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/mainBackground">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profilePic_chat_row_out_unread"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:contentDescription="Profile Pic"
        android:scaleType="centerCrop"
        android:src="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_width="0dp"
        app:riv_corner_radius="30dp" />

    <TextView
        android:id="@+id/name_row_out_unread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="56dp"
        android:gravity="start"
        android:textColor="@color/colorDarkFont"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/profilePic_chat_row_out_unread"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/you_row_out_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:text="@string/you_row_out"
        android:textColor="@color/colorDarkFont"
        app:layout_constraintBottom_toBottomOf="@+id/latest_message_row_out_unread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_row_out_unread" />

    <TextView
        android:id="@+id/latest_message_row_out_unread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginEnd="56dp"
        android:paddingStart="3dp"
        android:gravity="start"
        android:background="@color/colorDarkFont"
        android:maxLines="1"
        android:text="Latest Message"
        android:textColor="@color/mainBackground"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/you_row_out_unread"
        app:layout_constraintTop_toBottomOf="@+id/name_row_out_unread" />

    <TextView
        android:id="@+id/time_row_out_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:gravity="end"
        android:text="11:34"
        android:textColor="@color/colorDarkFont"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:id="@+id/separator_chat_out_unread"
        android:layout_width="385dp"
        android:layout_height="0.8dp"
        android:background="@color/colorInMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>