<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/bubble_incoming"
        android:maxWidth="330dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/text_message_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="0.8"
            android:maxWidth="270dp"
            android:paddingStart="18dp"
            android:paddingTop="4dp"
            android:paddingEnd="6dp"
            android:paddingBottom="4dp"
            android:text="@string/account_welcomeback"
            android:textColor="@color/colorMainFont"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_message_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/helvetica"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:text="11:40"
            android:textColor="@color/colorDarkFont"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_message_in"
            tools:ignore="RtlSymmetry,SmallSp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>