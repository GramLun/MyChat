<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorInMessage</item>
        <item name="colorPrimaryDark">@color/colorInMessage</item>

        <item name="itemBackground">@color/colorItem</item>
        <item name="android:itemBackground">@color/colorItem</item>

        <item name="actionMenuTextColor">@color/colorMainFont</item>
        <item name="android:actionMenuTextColor">@color/colorMainFont</item>
        <item name="android:textColor">@color/colorMainFont</item>

        <!-- Activity Transitions -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorDarkFont</item>
        <item name="colorControlActivated">@color/colorOutMessage</item>
        <item name="colorControlHighlight">@color/colorDarkFont</item>
        <item name="android:textColorHighlight">@color/colorDarkFont</item>
    </style>

    <style name="AppTheme.Chat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>